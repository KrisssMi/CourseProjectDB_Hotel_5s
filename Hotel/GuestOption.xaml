<UserControl x:Class="Hotel.GuestOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel"
             mc:Ignorable="d" 
             Width="80" Height ="515" Background="White" Loaded="GuestOptionLoaded" FontFamily="Comic Sans MS, Verdana">
    <Grid>
        <StackPanel Background="#FF1D1D1D">
            <Button x:Name="Booking" Content="Booking" Width="70" Height="70" Margin="5,5,5,0" Click="BookingClick" BorderBrush="{x:Null}" Background="#FF3F4973"/>
            <Button x:Name="Archive" Content="Archive" Width="70" Height="70" Margin="5,5,5,0" Click="ArchiveClick" BorderBrush="{x:Null}" Background="#FF3F4973"/>
            <Button x:Name="Settings" Content="Settings" Width="70" Height="70" Margin="5,5,5,0" Click="SettingsClick" BorderBrush="{x:Null}" Background="#FF3F4973"/>
        </StackPanel>
    </Grid>
</UserControl>
