<Window x:Class="Hotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="MainWindow" FontSize="14" Background="#FF222222" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize" Cursor="Pen" Loaded="MainWindowLoaded" Width="1080" Height="600" FontFamily="Comic Sans MS, Verdana">

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="25" Background="#FF343434">
            <StackPanel Width="80">
                <Frame x:Name="OptionFrame" NavigationUIVisibility="Hidden" />
            </StackPanel>
            <StackPanel Width="945">
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>
